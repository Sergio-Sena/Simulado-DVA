{
  "name": "dva-c02-course",
  "version": "1.0.0",
  "description": "AWS DVA-C02 Intensive Course Website",
  "main": "index.html",
  "scripts": {
    "dev": "serverless offline start",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:staging": "serverless deploy --stage staging",
    "deploy:prod": "serverless deploy --stage prod",
    "remove:dev": "serverless remove --stage dev",
    "remove:staging": "serverless remove --stage staging",
    "remove:prod": "serverless remove --stage prod",
    "sync:dev": "serverless s3sync --stage dev",
    "sync:staging": "serverless s3sync --stage staging",
    "sync:prod": "serverless s3sync --stage prod",
    "invalidate:dev": "serverless cloudfrontInvalidate --stage dev",
    "invalidate:staging": "serverless cloudfrontInvalidate --stage staging",
    "invalidate:prod": "serverless cloudfrontInvalidate --stage prod",
    "build": "echo 'Static site - no build needed'",
    "test": "echo 'No tests configured'",
    "rollback": "git checkout v1.0-stable"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sergio-Sena/Simulado-DVA.git"
  },
  "keywords": [
    "aws",
    "dva-c02",
    "certification",
    "course",
    "serverless"
  ],
  "author": "Sergio Sena",
  "license": "MIT",
  "devDependencies": {
    "serverless": "^3.38.0",
    "serverless-s3-sync": "^3.1.0",
    "serverless-domain-manager": "^7.0.0",
    "serverless-cloudfront-invalidate": "^1.12.2",
    "serverless-offline": "^13.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}